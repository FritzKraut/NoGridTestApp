<?xml version="1.0" encoding="utf-8"?>

<!--
        android:src="@drawable/placeholder_medium_100x70"

-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">


    <TextView
        android:id="@+id/rss_title_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:text="Title title Title title Title title Title title "
        android:paddingBottom="10dp"
        android:paddingTop="15dp" />

    <ImageView
        android:id="@+id/rss_image_view"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loading"

        />

    <TextView
        android:id="@+id/rss_description_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Article article Article article Article article Article article Article article Article article Article article "
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/rss_date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="10dp"
        android:text="Date:Date:date"
        android:layout_gravity="right" />
</LinearLayout>